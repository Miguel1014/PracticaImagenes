<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaImagenes.Page8">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Image  x:Name="Imagen" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="350" HeightRequest="350" Aspect="AspectFit" />
            <ActivityIndicator BindingContext="{x:Reference Imagen}" IsRunning="{Binding  isLoading}" />
            <Label  Text="8.- ¿Quién es este personaje?" FontSize="60" HorizontalOptions="Center"/>
            <Button FontSize="40" x:Name="r1"  Text="Broly" VerticalOptions="Center" HorizontalOptions="Center" Clicked="Res1"/>
            <Button FontSize="40" x:Name="r2"  Text="Trunks" VerticalOptions="Center" HorizontalOptions="Center" Clicked="Res2"/>
            <Button FontSize="40" x:Name="r3"  Text="Frieezer" VerticalOptions="Center" HorizontalOptions="Center" Clicked="Res3"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>